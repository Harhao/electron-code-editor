{
  "name": "electron-code-editor",
  "version": "0.0.1",
  "main": "dist/main/index.js",
  "author": "Harhao",
  "description": "a code editor develope by electron",
  "scripts": {
    "dev": "npm run dev:all",
    "dev:all": "concurrently -n=react,ele -c=green,blue \"npm run dev:react\" \"npm run dev:ele\"",
    "dev:react": "vite",
    "dev:ele": "node -r ts-node/register script/build --env=development --watch",
    "build:react": "vite build",
    "build:ele": "node -r ts-node/register script/build --env=production",
    "build": "rimraf dist && npm run build:react && npm run build:ele && electron-builder",
    "serve": "vite preview"
  },
  "dependencies": {
    "react": "^17.0.0",
    "react-dom": "^17.0.0"
  },
  "build": {
    "appId": "huahaoworkspace@163.com",
    "asar": true,
    "directories": {
      "output": "release/${version}"
    },
    "electronDownload": {
      "mirror": "https://npm.taobao.org/mirrors/electron/"
    },
    "files": [
      "!node_modules",
      "dist/**"
    ],
    "mac": {
      "artifactName": "${productName}_${version}.${ext}",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "artifactName": "${productName}_${version}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": false
    }
  },
  "devDependencies": {
    "@rollup/plugin-alias": "^3.1.2",
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^11.2.0",
    "@types/minimist": "^1.2.1",
    "@types/react": "^17.0.4",
    "@types/react-dom": "^17.0.3",
    "chalk": "^4.1.0",
    "concurrently": "^5.3.0",
    "electron": "12.0.1",
    "electron-builder": "^22.8.0",
    "electron-store": "^7.0.2",
    "less": "^4.1.1",
    "minimist": "^1.2.5",
    "ora": "^5.0.0",
    "rimraf": "^3.0.2",
    "rollup-plugin-esbuild": "^3.0.2",
    "rollup-plugin-node-externals": "^2.2.0",
    "sass": "^1.32.11",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3",
    "vite": "^2.1.2"
  }
}